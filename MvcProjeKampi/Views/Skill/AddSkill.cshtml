@model EntityLayer.Concrete.Skill


@{
    ViewBag.Title = "AddSkill";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yetenek Ekleme Sayfası</h2>
<br />
@using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.SkillID)
        @Html.Label("Yetenek Adı")
        @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SkillName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("YeteneK Oranı")
        @Html.TextBoxFor(x => x.SkillValue, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.SkillValue, "", new { @class = "text-danger" })
        <br />
        <button class="btn btn-primary">Ekle</button>
    </div>
}
