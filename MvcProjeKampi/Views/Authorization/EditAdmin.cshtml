@model EntityLayer.Concrete.Admin


@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Yetki Düzenleme Sayfası</h1>
<br />
@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.AdminID)

    @Html.Label("Admin Kullanıcı Adı")
    @Html.TextBoxFor(x => x.AdminUsername, new { @class = "form-control" })
    <br />
    @Html.Label("Parola")
    @Html.PasswordFor(x => x.AdminPassword, new { @class = "form-control" })
    <br />
    @Html.Label("Admin Rolü")
    @Html.DropDownListFor(x => x.AdminID, (List<SelectListItem>)ViewBag.valueAdmin, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Kaydet</button>
</div>
}
